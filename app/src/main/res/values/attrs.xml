<?xml version="1.0" encoding="utf-8"?>
<resources>
    //scale
    <declare-styleable name="RulerHorizontalView">
        <attr name="indicateColor" format="color|reference" />
        <attr name="selectedColor" format="color|reference" />
        <attr name="textColor" format="color|reference" />
        <attr name="textSize" format="dimension|reference"></attr>
        <attr name="begin" format="integer|reference" />
        <attr name="end" format="integer|reference" />
        <attr name="indicateWidth" format="dimension|reference" />
        <attr name="indicatePadding" format="dimension|reference" />
    </declare-styleable>

    ////////////////////////////////////////////////
    ////////////////////////////////////////////////

    <declare-styleable name="RoundedImageView">
        <attr name="riv_corner_radius" format="dimension" />
        <attr name="riv_corner_radius_top_left" format="dimension" />
        <attr name="riv_corner_radius_top_right" format="dimension" />
        <attr name="riv_corner_radius_bottom_left" format="dimension" />
        <attr name="riv_corner_radius_bottom_right" format="dimension" />
        <attr name="riv_border_width" format="dimension" />
        <attr name="riv_border_color" format="color" />
        <attr name="riv_mutate_background" format="boolean" />
        <attr name="riv_oval" format="boolean" />
        <attr name="android:scaleType" />
        <attr name="riv_tile_mode">
            <enum name="clamp" value="0" />
            <enum name="repeat" value="1" />
            <enum name="mirror" value="2" />
        </attr>
        <attr name="riv_tile_mode_x">
            <enum name="clamp" value="0" />
            <enum name="repeat" value="1" />
            <enum name="mirror" value="2" />
        </attr>
        <attr name="riv_tile_mode_y">
            <enum name="clamp" value="0" />
            <enum name="repeat" value="1" />
            <enum name="mirror" value="2" />
        </attr>
    </declare-styleable>

    <declare-styleable name="SVCircleProgressBar">
        <attr name="roundColor" format="color" />
        <attr name="roundProgressColor" format="color" />
        <attr name="roundWidth" format="dimension" />
        <attr name="max" format="integer" />
        <attr name="style">
            <enum name="STROKE" value="0" />
            <enum name="FILL" value="1" />
        </attr>
    </declare-styleable>

    <declare-styleable name="ClipSquareImageView">
        <attr name="ClipSquareIV_BorderDistance" format="dimension"/>
        <attr name="ClipSquareIV_BorderWidth" format="dimension"/>
        <attr name="ClipSquareIV_BorderColor" format="color"/>
        <attr name="ClipSquareIV_OutsideColor" format="color"/>
    </declare-styleable>

    <declare-styleable name="LabelsView">
        <attr name="max_labels" format="integer" />
        <attr name="show_cross" format="boolean" />
        <attr name="icon_cross" format="reference" />
        <attr name="text_color" format="color"/>
        <attr name="text_size" format="dimension"/>
        <attr name="label_background_res" format="reference"/>
        <attr name="label_clickable" format="boolean" />
        <attr name="label_padding" format="dimension"/>
    </declare-styleable>
</resources>