<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_theme">
    <com.qiyuan.fifish.ui.view.CustomHeadView
        android:id="@+id/head_option_photo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <GridView
        android:id="@+id/grid_option_photo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/dp5"
        android:layout_below="@+id/head_option_photo"
        android:horizontalSpacing="@dimen/dp5"
        android:numColumns="4"
        android:verticalSpacing="@dimen/dp5" />

    <RelativeLayout
        android:id="@+id/layout_import_option_photo"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp70"
        android:background="@color/green_black_theme"
        android:layout_alignParentBottom="true">

        <TextView
            android:id="@+id/tv_import_option_photo"
            android:layout_width="220dp"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/shape_grey_import"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:textSize="14sp"
            android:textColor="@color/white_theme"
            android:text="@string/import_photo" />
    </RelativeLayout>
</RelativeLayout>
