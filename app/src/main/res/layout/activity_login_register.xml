<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/log_reg_bg"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <ImageButton
        android:id="@+id/ibtn_close"
        android:layout_width="@dimen/dp48"
        android:layout_height="@dimen/dp48"
        android:layout_gravity="right"
        android:background="@null"
        android:src="@mipmap/close" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp16"
        android:src="@mipmap/logo_head" />

    <HorizontalScrollView
        android:id="@+id/horizontalScrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:fillViewport="true"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:id="@+id/ll_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp45"
                    android:layout_marginTop="@dimen/dp48"
                    >

                    <ImageView
                        android:layout_width="@dimen/dp20"
                        android:layout_height="@dimen/dp20"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/dp8"
                        android:layout_toLeftOf="@+id/et_phone"
                        android:layout_toStartOf="@+id/et_phone"
                        android:src="@mipmap/phone_white" />

                    <EditText
                        android:id="@+id/et_phone"
                        android:layout_width="@dimen/dp250"
                        android:layout_height="@dimen/dp45"
                        android:layout_centerHorizontal="true"
                        android:background="@null"
                        android:gravity="center"
                        android:hint="@string/phone_num"
                        android:inputType="phone"
                        android:maxLength="30"
                        android:singleLine="true"
                        android:textColor="@android:color/white"
                        android:textColorHint="@android:color/white"
                        android:textSize="@dimen/sp14" />

                    <View
                        android:layout_width="@dimen/dp250"
                        android:layout_height="@dimen/dp1"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:background="@android:color/white" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp45"
                    android:layout_marginTop="@dimen/dp16">

                    <ImageView
                        android:layout_width="@dimen/dp20"
                        android:layout_height="@dimen/dp20"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/dp8"
                        android:layout_toLeftOf="@+id/et_password"
                        android:layout_toStartOf="@+id/et_password"
                        android:src="@mipmap/password_white" />

                    <EditText
                        android:id="@+id/et_password"
                        android:layout_width="@dimen/dp250"
                        android:layout_height="match_parent"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center_horizontal"
                        android:background="@null"
                        android:gravity="center"
                        android:hint="@string/password"
                        android:inputType="textPassword"
                        android:maxLength="30"
                        android:singleLine="true"
                        android:textColor="@android:color/white"
                        android:textColorHint="@android:color/white"
                        android:textSize="@dimen/sp14" />

                    <View
                        android:layout_width="@dimen/dp250"
                        android:layout_height="@dimen/dp1"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:background="@android:color/white" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/tv_forget_password"
                    android:layout_width="@dimen/dp250"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/dp24"
                    android:gravity="right"
                    android:text="@string/forget_password"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/sp14" />

                <Button
                    android:id="@+id/btn_login"
                    style="@style/SubmitButtonStyle"
                    android:layout_width="@dimen/dp278"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/dp24"
                    android:background="@drawable/shape_button_login"
                    android:text="@string/login"
                    android:textColor="@color/color_025dc8"
                    android:textSize="@dimen/sp14" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_reg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center_horizontal"
                    android:clipChildren="false"
                    >

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp45"
                        android:layout_marginTop="@dimen/dp30"
                        >

                        <ImageView
                            android:layout_width="@dimen/dp20"
                            android:layout_height="@dimen/dp20"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/dp8"
                            android:layout_toLeftOf="@+id/et_phone_reg"
                            android:layout_toStartOf="@+id/et_phone_reg"
                            android:src="@mipmap/phone_white" />

                        <EditText
                            android:id="@+id/et_phone_reg"
                            android:layout_width="@dimen/dp250"
                            android:layout_height="@dimen/dp45"
                            android:layout_centerHorizontal="true"
                            android:background="@null"
                            android:gravity="center"
                            android:hint="@string/phone_num"
                            android:inputType="phone"
                            android:maxLength="30"
                            android:singleLine="true"
                            android:textColor="@android:color/white"
                            android:textColorHint="@android:color/white"
                            android:textSize="@dimen/sp14" />

                        <View
                            android:layout_width="@dimen/dp250"
                            android:layout_height="@dimen/dp1"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:background="@android:color/white" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp45"
                        android:layout_marginTop="@dimen/dp16">

                        <ImageView
                            android:layout_width="@dimen/dp20"
                            android:layout_height="@dimen/dp20"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/dp8"
                            android:layout_toLeftOf="@+id/et_password_reg"
                            android:layout_toStartOf="@+id/et_password_reg"
                            android:src="@mipmap/password_white" />

                        <EditText
                            android:id="@+id/et_password_reg"
                            android:layout_width="@dimen/dp250"
                            android:layout_height="match_parent"
                            android:layout_centerHorizontal="true"
                            android:layout_gravity="center_horizontal"
                            android:background="@null"
                            android:gravity="center"
                            android:hint="@string/password"
                            android:inputType="textPassword"
                            android:maxLength="30"
                            android:singleLine="true"
                            android:textColor="@android:color/white"
                            android:textColorHint="@android:color/white"
                            android:textSize="@dimen/sp14" />

                        <View
                            android:layout_width="@dimen/dp250"
                            android:layout_height="@dimen/dp1"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:background="@android:color/white" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp45"
                        android:layout_marginTop="@dimen/dp16"
                        >
                        <ImageView
                            android:layout_width="@dimen/dp20"
                            android:layout_height="@dimen/dp20"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/dp8"
                            android:layout_toLeftOf="@+id/rl_code"
                            android:layout_toStartOf="@+id/rl_code"
                            android:src="@mipmap/check_code_white" />

                        <RelativeLayout
                            android:id="@+id/rl_code"
                            android:layout_width="@dimen/dp250"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            >
                            <EditText
                                android:id="@+id/et_code"
                                android:layout_width="134dp"
                                android:layout_height="match_parent"
                                android:hint="@string/input_check_code"
                                android:gravity="center"
                                android:background="@null"
                                android:inputType="text"
                                android:singleLine="true"
                                android:textColorHint="@android:color/white"
                                android:textSize="@dimen/sp14"
                                />
                            <View
                                android:layout_width="134dp"
                                android:layout_height="@dimen/dp1"
                                android:background="@android:color/white"
                                android:layout_alignParentBottom="true"
                                />
                            <Button
                                android:id="@+id/btn_code"
                                android:layout_toRightOf="@+id/et_code"
                                android:layout_width="@dimen/dp100"
                                android:layout_height="@dimen/dp45"
                                android:layout_marginLeft="@dimen/dp16"
                                android:layout_marginStart="@dimen/dp16"
                                android:background="@drawable/shape_button_login"
                                android:text="@string/get_code"
                                android:textColor="@color/color_025dc8"
                                android:textSize="@dimen/sp14" />
                        </RelativeLayout>
                    </RelativeLayout>

                    <Button
                        android:id="@+id/btn_register"
                        style="@style/SubmitButtonStyle"
                        android:layout_width="@dimen/dp278"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/dp24"
                        android:background="@drawable/shape_button_login"
                        android:text="@string/register"
                        android:textColor="@color/color_025dc8"
                        android:textSize="@dimen/sp14" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </HorizontalScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp80"
        android:gravity="center_horizontal">

        <View
            android:layout_width="@dimen/dp100"
            android:layout_height="@dimen/dp1"
            android:layout_gravity="center_vertical"
            android:background="@android:color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp10"
            android:layout_marginRight="@dimen/dp10"
            android:text="@string/quick_login"
            android:textColor="@android:color/white"
            android:textSize="@dimen/sp14" />

        <View
            android:layout_width="@dimen/dp100"
            android:layout_height="@dimen/dp1"
            android:layout_gravity="center_vertical"
            android:background="@android:color/white" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp24"
        android:gravity="center_horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/facebook" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp48"
            android:src="@mipmap/instagram" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp48"
            android:src="@mipmap/wechat" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp32"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/not_account"
            android:textColor="@android:color/white"
            android:textSize="@dimen/sp14" />

        <TextView
            android:id="@+id/tv_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/register_now"
            android:textColor="@android:color/white"
            android:textSize="@dimen/sp14" />
    </LinearLayout>
</LinearLayout>