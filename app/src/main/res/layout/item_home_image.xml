<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@android:color/white"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp60"
        android:paddingLeft="@dimen/dp16"
        android:paddingRight="@dimen/dp16"
        android:paddingTop="@dimen/dp5"
        android:paddingBottom="@dimen/dp5"
        >
        <com.qiyuan.fifish.ui.view.roundImageView.RoundedImageView
            android:id="@+id/riv"
            android:layout_width="@dimen/dp45"
            android:layout_height="@dimen/dp45"
            android:src="@mipmap/default_head"
            app:riv_corner_radius="@dimen/dp100"
            app:riv_border_color="@color/color_eee"
            app:riv_border_width="@dimen/dp05"
            android:layout_centerVertical="true"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/riv"
            android:layout_marginLeft="@dimen/dp10"
            android:layout_marginRight="@dimen/dp10"
            android:layout_toLeftOf="@+id/btn"
            >
            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:drawablePadding="@dimen/dp10"
                android:ellipsize="end"
                android:textSize="@dimen/sp13"
                android:text="@string/app_name"
                android:textColor="@color/color_222"
                />
            <TextView
                android:id="@+id/tv_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/dp5"
                android:drawableLeft="@mipmap/location"
                android:singleLine="true"
                android:textSize="@dimen/sp10"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/dp10"
                android:layout_marginRight="@dimen/dp5"
                android:textColor="@color/color_999"
                android:text="@string/app_name"
                android:visibility="invisible"
                />
        </LinearLayout>
        <TextView
            android:id="@+id/tv_time"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textSize="@dimen/sp12"
            android:textColor="@color/color_666"
            android:text="@string/app_name"
            />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dp20"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingMultiplier="1.5"
            android:text="内容呢哦荣内容呢哦荣内容呢哦荣内容呢哦荣内容呢哦荣内容呢哦荣内容呢哦荣内容呢哦荣内容呢哦荣"
            android:textSize="@dimen/sp12"
            android:paddingBottom="@dimen/dp10"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp45"
            android:paddingLeft="@dimen/dp16"
            android:paddingRight="@dimen/dp16"
            >
            <ImageButton
                android:id="@+id/ibtn_favorite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_unsupport"
                android:layout_centerVertical="true"
                android:background="@null"
                />
            <ImageButton
                android:id="@+id/ibtn_comment"
                android:layout_toRightOf="@+id/ibtn_favorite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_comment"
                android:layout_marginLeft="@dimen/dp25"
                android:layout_centerVertical="true"
                android:background="@null"
                />
            <ImageButton
                android:id="@+id/ibtn_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:src="@mipmap/icon_share"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
