<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_item_box"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp50"
    android:background="@drawable/selector_fff_eee">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/dp16">
        <ImageView
            android:id="@+id/iv"
            android:layout_width="38dp"
            android:layout_height="match_parent"
            android:src="@mipmap/wechat"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/iv"
            android:layout_marginLeft="@dimen/dp10"
            >
            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:ellipsize="end"
                android:textSize="@dimen/sp12"
                android:text="@string/app_name"
                android:textColor="@color/color_333"
                />
            <TextView
                android:id="@+id/tv_subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textSize="@dimen/sp10"
                android:ellipsize="end"
                android:text="@string/app_name"
                android:textColor="@color/color_666"
                />
        </LinearLayout>
    </RelativeLayout>


    <ImageView
        android:id="@+id/iv_more_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/dp16"
        android:src="@mipmap/more" />

    <TextView
        android:id="@+id/tv_arrow_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/iv_more_arrow"
        android:ellipsize="end"
        android:maxLength="15"
        android:textColor="@color/color_999"
        android:textSize="@dimen/sp14"
        android:visibility="gone" />
    <TextView
        android:id="@+id/tv_right_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:ellipsize="end"
        android:maxLength="15"
        android:paddingRight="@dimen/dp10"
        android:text="@string/app_name"
        android:textColor="@color/color_333"
        android:textSize="@dimen/sp14"
        android:visibility="gone" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp05"
        android:layout_alignParentBottom="true"
        android:background="@color/color_ddd" />
</RelativeLayout>