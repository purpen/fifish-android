<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:paddingLeft="@dimen/dp16"
    android:paddingRight="@dimen/dp16"
    android:paddingTop="@dimen/dp10"
    android:background="@color/color_f7f7f7"
    >
    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dp10"
        android:background="@drawable/shape_radius_999"
        android:padding="@dimen/dp5"
        android:text="@string/app_name"
        android:textColor="@android:color/white"
        android:textSize="@dimen/sp10" />
    <LinearLayout
        android:layout_below="@+id/tv_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:color/white"
        android:paddingLeft="@dimen/dp10"
        android:paddingRight="@dimen/dp10"
        android:paddingTop="@dimen/dp10"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="@string/app_name"
                android:textColor="@color/color_333"
                android:textSize="@dimen/sp12"
                android:background="@android:color/white"
                />
            <TextView
                android:id="@+id/dot"
                android:layout_width="@dimen/dp5"
                android:layout_toRightOf="@+id/title"
                android:layout_height="@dimen/dp5"
                android:layout_marginLeft="@dimen/dp5"
                android:layout_gravity="center_vertical"
                android:background="@drawable/dot_bg"
                android:layout_marginRight="@dimen/dp5"
                android:visibility="gone"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title"
            android:layout_centerVertical="true"
            android:layout_marginBottom="@dimen/dp10"
            android:layout_marginTop="@dimen/dp10"
            android:orientation="horizontal"
            android:background="@android:color/white"
            >
            <com.qiyuan.fifish.ui.view.roundImageView.RoundedImageView
                android:id="@+id/riv"
                android:layout_width="@dimen/dp70"
                android:layout_height="@dimen/dp70"
                android:layout_centerVertical="true"
                android:src="@mipmap/default_cover"
                app:riv_corner_radius="@dimen/dp100"
                android:layout_marginRight="@dimen/dp10"
                android:visibility="gone"
                />

            <TextView
                android:id="@+id/tv_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="@string/app_name"
                android:textColor="@color/color_666"
                android:textSize="@dimen/sp12" />
        </LinearLayout>

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp05"
            android:layout_below="@+id/ll"
            android:background="@color/color_ccc" />

        <TextView
            android:layout_below="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/dp10"
            android:paddingBottom="@dimen/dp10"
            android:text="查看详情"
            android:textSize="@dimen/sp12"
            android:drawableRight="@mipmap/icon_more"
            android:textColor="@color/color_333"
            />
    </LinearLayout>
</RelativeLayout>