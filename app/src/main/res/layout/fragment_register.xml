<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_reg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_toRightOf="@+id/ll_login">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:clipChildren="false"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp45"
            android:layout_marginTop="@dimen/dp30">

            <ImageView
                android:layout_width="@dimen/dp20"
                android:layout_height="@dimen/dp20"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp8"
                android:layout_toLeftOf="@+id/et_phone_reg"
                android:layout_toStartOf="@+id/et_phone_reg"
                android:src="@mipmap/phone_white" />

            <EditText
                android:id="@+id/et_phone_reg"
                android:layout_width="@dimen/dp250"
                android:layout_height="@dimen/dp45"
                android:layout_centerHorizontal="true"
                android:background="@null"
                android:gravity="center"
                android:hint="@string/phone_num"
                android:inputType="phone"
                android:maxLength="30"
                android:singleLine="true"
                android:textColor="@android:color/white"
                android:textColorHint="@android:color/white"
                android:textSize="@dimen/sp14" />

            <View
                android:layout_width="@dimen/dp250"
                android:layout_height="@dimen/dp1"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:background="@android:color/white" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp45"
            android:layout_marginTop="@dimen/dp16">

            <ImageView
                android:layout_width="@dimen/dp20"
                android:layout_height="@dimen/dp20"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp8"
                android:layout_toLeftOf="@+id/et_password_reg"
                android:layout_toStartOf="@+id/et_password_reg"
                android:src="@mipmap/password_white" />

            <EditText
                android:id="@+id/et_password_reg"
                android:layout_width="@dimen/dp250"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:background="@null"
                android:gravity="center"
                android:hint="@string/password"
                android:inputType="textPassword"
                android:maxLength="30"
                android:singleLine="true"
                android:textColor="@android:color/white"
                android:textColorHint="@android:color/white"
                android:textSize="@dimen/sp14" />

            <View
                android:layout_width="@dimen/dp250"
                android:layout_height="@dimen/dp1"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:background="@android:color/white" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp45"
            android:layout_marginTop="@dimen/dp16">

            <ImageView
                android:layout_width="@dimen/dp20"
                android:layout_height="@dimen/dp20"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp8"
                android:layout_toLeftOf="@+id/rl_code"
                android:layout_toStartOf="@+id/rl_code"
                android:src="@mipmap/check_code_white" />

            <RelativeLayout
                android:id="@+id/rl_code"
                android:layout_width="@dimen/dp250"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true">

                <EditText
                    android:id="@+id/et_code"
                    android:layout_width="134dp"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:gravity="center"
                    android:hint="@string/input_check_code"
                    android:inputType="text"
                    android:singleLine="true"
                    android:textColorHint="@android:color/white"
                    android:textSize="@dimen/sp14" />

                <View
                    android:layout_width="134dp"
                    android:layout_height="@dimen/dp1"
                    android:layout_alignParentBottom="true"
                    android:background="@android:color/white" />

                <Button
                    android:id="@+id/btn_code"
                    android:layout_width="@dimen/dp100"
                    android:layout_height="@dimen/dp45"
                    android:layout_marginLeft="@dimen/dp16"
                    android:layout_marginStart="@dimen/dp16"
                    android:layout_toRightOf="@+id/et_code"
                    android:background="@drawable/shape_button_login"
                    android:text="@string/get_code"
                    android:textColor="@color/color_025dc8"
                    android:textSize="@dimen/sp14" />
            </RelativeLayout>
        </RelativeLayout>

        <Button
            android:id="@+id/btn_register"
            style="@style/SubmitButtonStyle"
            android:layout_width="@dimen/dp278"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp24"
            android:background="@drawable/shape_button_login"
            android:text="@string/register"
            android:textColor="@color/color_025dc8"
            android:textSize="@dimen/sp14" />
    </LinearLayout>
</LinearLayout>