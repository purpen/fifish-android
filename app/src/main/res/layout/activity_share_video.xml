<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:autolabel="http://schemas.android.com/apk/res-auto"
    android:background="@color/color_f7f7f7"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <com.qiyuan.fifish.ui.view.CustomHeadView
        android:id="@+id/custom_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@android:color/white"
            >

            <fm.jiecao.jcvideoplayer_lib.JCVideoPlayerStandard
                android:id="@+id/videoView"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp210" />

            <EditText
                android:id="@+id/et_share_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left|top"
                android:hint="@string/add_video_des"
                android:minLines="5"
                android:maxLength="200"
                android:paddingBottom="@dimen/dp10"
                android:paddingLeft="@dimen/dp16"
                android:paddingRight="@dimen/dp16"
                android:paddingTop="@dimen/dp10"
                android:background="@null"
                android:textSize="@dimen/sp14"
                android:textColor="@color/color_333"
                android:textColorHint="@color/color_999" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp05"
                android:background="@color/color_ddd" />

            <TextView
                android:id="@+id/tv_add_tag"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp45"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dp16"
                android:paddingRight="@dimen/dp16"
                android:text="@string/add_tag"
                android:textColor="@color/color_999"
                android:textSize="@dimen/sp12" />

            <com.qiyuan.fifish.ui.view.labelview.AutoLabelUI
                android:id="@+id/label_view"
                android:layout_width="match_parent"
                android:layout_marginLeft="@dimen/dp16"
                android:layout_marginRight="@dimen/dp16"
                android:layout_height="wrap_content"
                autolabel:label_background_res="@android:color/transparent"
                autolabel:label_clickable="true"
                autolabel:label_padding="0dp"
                autolabel:show_cross="false"
                autolabel:text_color="@color/color_666"
                autolabel:text_size="@dimen/label_title_size" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp05"
                android:background="@color/color_ddd" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp45"
                android:gravity="center"
                android:paddingLeft="@dimen/dp16"
                android:text="@string/share_to"
                android:textColor="@color/color_333"
                android:textSize="@dimen/sp14" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
            <ImageView
                android:id="@+id/iv_first"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>