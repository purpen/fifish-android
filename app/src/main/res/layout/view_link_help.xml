<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/ll_box"
        android:background="@color/color_ddd"
        />
    <LinearLayout
        android:id="@+id/ll_box"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp30"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@null"
            android:text="@string/app_name"
            android:textColor="@color/color_333"
            android:textSize="@dimen/sp14"
            android:layout_centerHorizontal="true"
            />
        <Button
            android:id="@+id/btn_next"
            android:layout_width="@dimen/dp250"
            android:layout_height="@dimen/dp45"
            android:layout_marginTop="@dimen/dp20"
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            android:layout_centerHorizontal="true"
            android:background="@drawable/shape_button_border_gray"
            android:textColor="@color/color_2187ff"
            android:text="下一步"
            android:textSize="@dimen/sp14"
            android:layout_marginBottom="@dimen/dp70"
            />
    </LinearLayout>
</RelativeLayout>