<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_theme">

    <GridView
        android:id="@+id/grid_media_inner_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/dp5"
        android:horizontalSpacing="@dimen/dp5"
        android:numColumns="4"
        android:verticalSpacing="@dimen/dp5"
        android:visibility="visible" />

    <TextView
        android:id="@+id/no_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:text="jjjj"
        android:visibility="gone"
        android:textStyle="bold" />

    <RelativeLayout
        android:id="@+id/layout_bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp48"
        android:layout_alignParentBottom="true"
        android:background="@color/green_black_theme"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_share_media_inner_fragment"
            android:text="@string/share"
            android:textColor="@color/white_theme"
            android:paddingLeft="@dimen/dp10"
            android:paddingRight="@dimen/dp10"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <ImageView
            android:id="@+id/image_delete_media_inner_fragment"
            android:src="@mipmap/dustbin"
            android:paddingRight="@dimen/dp10"
            android:paddingLeft="@dimen/dp10"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </RelativeLayout>
</RelativeLayout>