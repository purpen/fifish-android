<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:autolabel="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@android:color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp60"
        android:paddingLeft="@dimen/dp16"
        android:paddingRight="@dimen/dp16"
        android:paddingTop="@dimen/dp5"
        android:paddingBottom="@dimen/dp5"
        >
        <com.qiyuan.fifish.ui.view.roundImageView.RoundedImageView
            android:id="@+id/riv"
            android:layout_width="@dimen/dp45"
            android:layout_height="@dimen/dp45"
            android:src="@mipmap/default_head"
            app:riv_corner_radius="@dimen/dp100"
            app:riv_border_color="@color/color_eee"
            app:riv_border_width="@dimen/dp05"
            android:layout_centerVertical="true"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/riv"
            android:layout_marginLeft="@dimen/dp10"
            android:layout_marginRight="@dimen/dp10"
            android:layout_toLeftOf="@+id/btn"
            >
            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:drawablePadding="@dimen/dp10"
                android:ellipsize="end"
                android:textSize="@dimen/sp13"
                android:text="@string/app_name"
                android:textColor="@color/color_222"
                />
            <TextView
                android:id="@+id/tv_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/dp5"
                android:drawableLeft="@mipmap/location"
                android:maxLines="1"
                android:textSize="@dimen/sp10"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/dp10"
                android:layout_marginRight="@dimen/dp5"
                android:textColor="@color/color_999"
                android:text="@string/app_name"
                android:visibility="invisible"
                />
        </LinearLayout>
        <Button
            android:id="@+id/btn_focus"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="@dimen/dp70"
            android:layout_height="@dimen/dp30"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textSize="@dimen/sp12"
            android:text="@string/focus"
            android:textColor="@color/color_333"
            />
    </RelativeLayout>

    <fm.jiecao.jcvideoplayer_lib.JCVideoPlayerStandard
        android:id="@+id/videoView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp210"
        android:visibility="gone"
        />

    <ImageView
        android:id="@+id/iv_cover"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp210"
        android:scaleType="centerCrop"
        android:visibility="gone"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dp16"
        android:paddingRight="@dimen/dp16"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp45"
            >
            <LinearLayout
                android:id="@+id/ll_favorite"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                >
                <ImageButton
                    android:id="@+id/ibtn_favorite"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@mipmap/icon_unsupport"
                    android:background="@null"
                    />
                <TextView
                    android:id="@+id/tv_zan_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp10"
                    android:layout_marginLeft="@dimen/dp2"
                    android:layout_marginTop="@dimen/dp5"
                    android:textColor="@color/color_999"
                    android:text="0"
                    android:visibility="gone"
                    />
            </LinearLayout>

            <ImageButton
                android:id="@+id/ibtn_comment"
                android:layout_toRightOf="@+id/ll_favorite"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@mipmap/icon_comment"
                android:layout_marginLeft="@dimen/dp25"
                android:background="@null"
                />
            <ImageButton
                android:id="@+id/ibtn_share"
                android:layout_toRightOf="@+id/ibtn_comment"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp25"
                android:background="@null"
                android:src="@mipmap/icon_share"
                />
            <ImageButton
                android:id="@+id/ibtn_more"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@null"
                android:src="@mipmap/icon_bt_more"
                android:layout_alignParentRight="true"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp05"
                android:background="@color/color_ddd"
                android:layout_alignParentBottom="true"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingMultiplier="1.5"
                android:textSize="@dimen/sp12"
                android:paddingBottom="@dimen/dp10"
                android:maxLines="3"
                android:ellipsize="end"
                android:paddingTop="@dimen/dp10"
                android:textColor="@color/color_333"
                />
            <TextView
                android:id="@+id/btn_more"
                android:layout_width="@dimen/dp50"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:text="@string/look_more"
                android:textColor="@color/color_333"
                android:textSize="@dimen/sp12"
                android:drawableRight="@mipmap/arrow_more"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_alignBottom="@+id/tv_txt"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_comment_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:textColor="@color/color_999"
                android:textSize="@dimen/sp10"
                />
            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:textColor="@color/color_999"
                android:textSize="@dimen/sp10"
                android:layout_alignParentRight="true"
                />
        </RelativeLayout>
        <com.qiyuan.fifish.ui.view.labelview.AutoLabelUI
            android:id="@+id/label_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            autolabel:label_background_res="@android:color/transparent"
            autolabel:label_clickable="true"
            autolabel:label_padding="0dp"
            autolabel:show_cross="false"
            autolabel:text_color="@color/color_666"
            autolabel:text_size="@dimen/label_title_size" />
    </LinearLayout>
    <View
        android:id="@+id/view_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp10"
        android:background="@color/color_f7f7f7"
        />
</LinearLayout>
